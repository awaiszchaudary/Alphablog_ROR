<h1 class="text-center mt-5 mb-5">Alphabloggers</h1>

<div class="container">
    <% @users.each do |user| %>
        <div class="card text-center">
            <div class="card-header">
                <%= user.username %>
            </div>
            <div class="card-body">
                <p class="card-text"><%= user.email %></p>
                <%= link_to 'View', user_path(user), class: 'btn btn-outline-success' %>
                <% if user.id == current_user.id %>
                    <%= link_to 'Edit', edit_user_registration_path(user), class: 'btn btn-outline-info' %>
                <% end %>
            </div>
            <div class="card-footer text-body-secondary">
                Joined <%= time_ago_in_words(user.created_at) %>
            </div>
        </div>
        
    <% end %>

    
</div>