<h1 class="text-center mt-5">List of all articles</h1>

<div class="container">
    <% @articles.each do |article| %>
        <div class="card text-center">
            <div class="card-header">
                <%= article.user.username %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text"><%= article.description %></p>
                <%= link_to 'View', article_path(article), class: 'btn btn-outline-success' %>
                <% if article.user.id == current_user.id %>
                    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-info' %>
                    <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger' %>
                <% end %>
            </div>
            <div class="card-footer text-body-secondary">
                created_at <%= time_ago_in_words(article.created_at) %>, updated_at <%= time_ago_in_words(article.updated_at) %>
            </div>
        </div>
        
    <% end %>
    
</div>