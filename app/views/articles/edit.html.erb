<h1 class="text-center mt-5" >Create new article</h1>

<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |mess| %>
            <li><%= mess %></li>
        <% end %>
    </ul>
<% end %>

<div class="container mt-5">
    <%= form_with model: @article, local: true do |f|  %>
        <div>
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class:"form-control" %>
        </p>
        <p>
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class:"form-control" %>
        </p>

        <%= f.submit "Update", class: "btn btn-outline-success" %>
    
    <% end %>
</div>

<%= link_to 'Go to all articles', articles_path, class: "btn btn-outline-danger mt-4" %>